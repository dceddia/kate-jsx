<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE language SYSTEM "language.dtd">
<language
  name="JSX"
  section="Scripts"
  extensions="*.js;*.jsx"
  mimetype="text/jsx"
  version="0.0.1"
  kateversion="3.12.0"
  priority="1"
  indenter="cstyle"
  author="RafaÅ‚ Rzepecki (divided.mind@gmail.com)"
  license="MIT"
>
  <highlighting>
    <contexts>
      <context name="Normal">
        <IncludeRules context="FindXML (XML)" />
      </context>
      <context name="FindXML (XML)">
        <DetectChar char="{" context="Nested JS" />
      </context>
      <context name="Value (XML)">
        <DetectChar char="{" context="Nested JS Attribute" />
      </context>
      <context name="Nested JS" lineEndContext="#stay" attribute="Normal Text" >
        <DetectChar char="}" context="#pop" />
        <IncludeRules context="Normal" />
      </context>
      <context name="Nested JS Attribute" lineEndContext="#stay" attribute="Normal Text" >
        <DetectChar char="}" context="#pop#pop#pop" />
        <IncludeRules context="Normal" />
      </context>
    </contexts>
  </highlighting>
</language>
